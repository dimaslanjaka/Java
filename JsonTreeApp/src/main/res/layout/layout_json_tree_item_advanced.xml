<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ew_ll_parent_node_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <Button
            android:id="@+id/ew_btn_expend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:text="+"/>

    <TextView
            android:id="@+id/ew_tv_node_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="demo///bstatus"/>

    <TextView
            android:id="@+id/ew_tv_node_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#7F8081"
            android:text="demo///{2}"
            android:visibility="gone"
            tools:visibility="visible"/>

    <TextView
            android:id="@+id/ew_tv_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#7F8081"
            android:text=":"
            android:visibility="gone"
            tools:visibility="visible"/>

    <TextView
            android:id="@+id/ew_tv_node_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="demo///-1"/>

</LinearLayout>
