<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.dimaslanjaka.tools.fragment.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_ytmp3"
        android:name="com.dimaslanjaka.tools.fragment.ytmp3.Ytmp3Fragment"
        android:label="Youtube MP3"
        tools:layout="@layout/fragment_ytmp3">
        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.dimaslanjaka.tools.fragment.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.dimaslanjaka.tools.fragment.about.About"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>